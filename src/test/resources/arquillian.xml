<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://jboss.org/schema/arquillian"
    xsi:schemaLocation="http://jboss.org/schema/arquillian
                http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
    <defaultProtocol type="Servlet 3.0" />

    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>

    <container qualifier="payara" default="true">
        <configuration>
            <property name="microJar">${PAYARA_MICRO_JAR}</property>
            <property name="randomHttpPort">false</property>
            <property name="autoBindHttp">false</property>
            <property name="extraMicroOptions">--port 8181 --contextroot cargo-tracker-test</property>
        </configuration>
    </container>
    <container qualifier="wildfly-embedded">
        <configuration>
            <!--<property name="jbossHome">${jbossHome:target/wildfly-18.0.1.Final}</property>-->
            <property name="serverConfig">standalone-full.xml</property>
        </configuration>
    </container>
</arquillian>