<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="6.0"
  xmlns="https://jakarta.ee/xml/ns/jakartaee"
  xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
  <data-source>
    <class-name>org.h2.jdbcx.JdbcDataSource</class-name>
    <name>java:app/jdbc/CargoTrackerDatabase</name>
    <url>jdbc:h2:file:./cargo-tracker-test-data/cargo-tracker-database;create=true</url>
  </data-source>
  <env-entry>
    <env-entry-name>java:app/configuration/GraphTraversalUrl</env-entry-name>
    <env-entry-type>java.lang.String</env-entry-type>
    <env-entry-value>http://localhost:9090/cargo-tracker-test/rest/graph-traversal/shortest-path
    </env-entry-value>
  </env-entry>
</web-app>